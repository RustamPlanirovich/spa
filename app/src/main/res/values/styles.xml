<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Wifi -->
    <style name="Widget.Button.Toggle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_toggle</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!-- Air -->
    <style name="Widget.Button.Toggle1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_toggle_air</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!-- Bluetooth -->
    <style name="Widget.Button.Toggle2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_toggle_bluetooth</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!-- Dnd -->
    <style name="Widget.Button.Toggle3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/btn_toggle_dnd</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

</resources>
